extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Authentication Server
        form.w3-container(action="/api/login" method="GET")
            label Username
            input.w3-input(type="text" name="username")
            label Password
            input.w3-input(type="password" name="password")
            input.w3-input(type="submit" value="Login")
    